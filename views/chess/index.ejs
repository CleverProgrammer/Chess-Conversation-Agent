<div class="container-fluid">
  <div class="row" id="top">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h1 class="title">Chess Conversation Agent</h1>
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    
    <div class="col-md-5">
      <!-- Chessboard -->
      <div id="board"></div>

      <!-- Chessboard controls -->
      <form class="form-inline" role="form">
        <div class="form-group">
          <label class="sr-only" for="move">Move</label>
          <input type="text" class="form-control" id="moveInput" placeholder="Enter move">
        </div>
        <button id="moveButton" type="button" class="btn btn-default">Move</button>
      </form>
      <button id="annyangButton" type="button" class="btn btn-default">Toggle Annyang</button>
    </div>

    <div class="col-md-5">
      <!-- Conversation board -->
      <h3>Conversation Board</h3>  
      <table id="conversationBoard" class="table">
      </table>
    </div>

    <div class="col-md-1"></div>
  </div>
</div>